rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function hasRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || hasRole('admin') || hasRole('hr_ops') || hasRole('recruiter') || hasRole('hiring_manager');
      allow write: if hasRole('admin') || (hasRole('hr_ops') && request.resource.data.role != 'admin');
    }

    // Jobs collection
    match /jobs/{jobId} {
      allow read: if true; // Public for candidates to see
      allow write: if hasRole('admin') || hasRole('recruiter');
    }

    // Candidates collection
    match /candidates/{candidateId} {
      allow read, write: if hasRole('admin') || hasRole('recruiter') || hasRole('hiring_manager');
    }
    
    // Employees collection
    match /employees/{employeeId} {
      allow read: if hasRole('admin') || hasRole('hr_ops') || hasRole('payroll') || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if hasRole('admin') || hasRole('hr_ops');
    }
  }
}
